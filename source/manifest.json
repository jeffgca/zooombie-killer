{
	"name": "Awesome Extension",
	"version": "0.0.0",
	"description": "An awesome new browser extension",
	"homepage_url": "https://github.com/awesome-templates/browser-extension-template",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "zoombie-icon-128.png"
	},
	"permissions": [
		"webNavigation", "tabs", "storage", "unlimitedStorage"
	],
	"background": {
		"persistent": true,
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "zoombie-icon-16.png",
			"32": "zoombie-icon-32.png"
		},
		"default_title": "Zooombie killer!"
	}
}
